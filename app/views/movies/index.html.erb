<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Movie</th>
    <th scope="col">Genre</th>
    <th scope="col">Plot</th>
  </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= image_tag movie.poster, width: 200 %>
          <br>
          <%= "#{movie.title} (#{movie.year})" %>
        </td>
        <td><%= movie.genre %></td>
        <td><%= movie.plot %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @movies %>


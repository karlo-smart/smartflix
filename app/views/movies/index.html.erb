<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Movie</th>
    <th scope="col">Year</th>
    <th scope="col">Genre</th>
    <th scope="col">Plot</th>
  </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <th><%= movie.title %></th>
        <td><%= image_tag movie.poster, width: 150 %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.plot %></td>
      </tr>
    <% end %>
  </tbody>
</table>
